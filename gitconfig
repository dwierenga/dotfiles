[user]
        name = Dan Wierenga
	email = dwierenga@gmail.com
[includeIf "gitdir:~/git/"]
    path = ~/git/.gitconfig
[alias]
        alias = !git config -l | grep alias| cut -c 7-
        difflast = diff --cached HEAD^
        filelog = log -u
        fl = log -u
        go = !open $(git url)
        hist = log --oneline --decorate --all --graph
        ls = log --pretty=format:\"%C(yellow)%h%Cred%d\\\\ %Creset%s%Cblue\\\\ [%cn]\" --decorate
        pick = add -p
        root = rev-parse --show-toplevel
        ss = status -s
        st = status
        tree = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
        wc = whatchanged
	url = remote get-url web
[merge "ours"]
        driver = true
[push]
	default = simple

[color]
    status = auto

[color "status"]
    added = green
    changed = bold green
    untracked = magenta
    header = cyan bold

[diff]
	tool = vimdiff
	noprefix = true
[pull]
	rebase = true
[rebase]
	autoStash = true
[push]
	default = simple
