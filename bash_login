alias cls='clear'
alias cu='cd ..'
alias diff='diff -du'
alias env="env | sort"
alias grep='grep -E'
alias j="jobs"
[[ -x ~/bin/ack ]] && alias pack='~/bin/ack --passthru'
alias proctree='/bin/ps -ew --forest -Oc'
alias rebash='source ~/.bash_login'
alias vols='lsblk -i -o kname,mountpoint,fstype,size,maj:min,name,state,rm,rota,ro,type,label,model,serial'
alias quit='exit'


# print the header (the first line of input)
# and then run the specified command on the body (the rest of the input)
# use it in a pipeline, e.g. ps | body grep somepattern
# from http://unix.stackexchange.com/questions/11856/sort-but-keep-header-line-at-the-top/11859#11859
function body {
    IFS= read -r header
    printf '%s\n' "$header"
    "$@"
}

ff() {
    find * -type f -name "*${1}*"
}
username="$USER"
if [[ "$LOGNAME" -ne "$USER" ]]; then
    username="$LOGNAME"
fi 
if [[ "$SUDO_USER" -ne "$USER" ]]; then
    username="$SUDO_USER"
fi 
for homedirs in Users home home2; do
    for home_env_file in bash_completion.bashrc git.aliases maven_bash_completion.bash prompt.bashrc; do
    if [ -f "/${homedirs}/$username/.env/${home_env_file}" ]; then
            . "/${homedirs}/$username/.env/${home_env_file}"
    fi
    done
    if [ -r "/$homedirs/${username}/.env/inputrc" ]; then
        bind -f "/$homedirs/${username}/.env/inputrc"
    fi
done
